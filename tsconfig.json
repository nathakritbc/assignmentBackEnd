{
  "compilerOptions": {
    "target": "ES2020",  
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,             
    "module": "commonjs",             
    "strict": true,                    
    "esModuleInterop": true,          
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                
    "rootDir": "./src",           
    "resolveJsonModule": true,        
    "noImplicitAny": false,           
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"],       
  "exclude": ["node_modules"]        
}
